{
  "name": "next-zero-demo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "cache:dev": "mkdir -p ./zero-cache-data/dev && dotenvx run -f .env.development -- zero-cache-dev --replica-file ./zero-cache-data/dev/zero.db",
    "zero:generate": "dotenvx run -f .env.development -- drizzle-zero generate --schema ./db/schema.ts --drizzle-kit-config ./drizzle.config.ts --output ./zero/zero-schema.gen.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "dotenvx run -f .env.development -- drizzle-kit migrate",
    "db:push": "dotenvx run -f .env.development -- drizzle-kit push",
    "db:studio": "dotenvx run -f .env.development -- drizzle-kit studio"
  },
  "dependencies": {
    "@rocicorp/zero": "^0.25.11",
    "drizzle-orm": "^0.45.1",
    "nanoid": "^5.1.6",
    "next": "16.1.6",
    "pg": "^8.17.2",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.52.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.8",
    "drizzle-zero": "^0.17.3",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
